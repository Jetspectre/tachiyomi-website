html [data-theme=light] {
	background-color #ffffff
}

html [data-theme=dark] {
	background-color #111827
}

html [data-theme=experimental] {
	background-color #292643
}

body {
	overflow-y overlay
}

::selection {
	background var(--select-color)
}

hr {
	border-color var(--color-ui-border)
	margin-top 0.75rem
	margin-bottom 0.75rem
}

.container {
	width 100%
	margin-right auto
	margin-left auto
	padding-right 1rem
	padding-left 1rem

	@media (min-width 640px) {
		max-width 640px
	}

	@media (min-width 768px) {
		max-width 768px
	}

	@media (min-width 1024px) {
		max-width 1024px
	}

	@media (min-width 1280px) {
		max-width 1280px
	}

	@media (min-width 1400px) {
		max-width 1400px
	}
}

.missingProps {
	color var(--color-ui-secondary)
	font-weight 500
	font-size 1em
}
